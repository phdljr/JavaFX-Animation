	prefHeight="500.0" prefWidth="350.0"
	xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.LoginLayoutController">
	<top>
		<BorderPane 
			style="-fx-background-color: #eaeaea;">
			<left>
				<Button fx:id="btn_main" text="메인"/>
			</left>
			<center>
				<Label alignment="CENTER" prefWidth="215.0" text="로그인 화면"/>
			</center>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</BorderPane>
	</top>
	<center>
		<VBox style="-fx-background-color: #0000ff;" />
	</center>
</BorderPane>
